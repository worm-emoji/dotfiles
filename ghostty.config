font-family = "Berkeley Mono"
font-style = Medium

# Font size (matching 14.0)
font-size = 13

# Cursor style (matching underline)
cursor-style = underline

# Window padding (matching x=20, y=20)
window-padding-x = 20
window-padding-y = 20

# Window decoration (matching buttonless)
window-decoration = false

# Mouse settings (matching hide_when_typing = false)
mouse-hide-while-typing = false

# Font positioning (approximating the offset and glyph_offset)
adjust-font-baseline = 0

# Window opacity (matching opacity = 1)
background-opacity = 1.0

shell-integration = fish
window-save-state = always

link-url = true
